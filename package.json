{
  "name": "create-slots",
  "version": "0.2.0",
  "description": "Bring slots to React component",
  "repository": {
    "type": "git",
    "url": "https://github.com/nihgwu/create-slots.git"
  },
  "author": "Neo Nie <nihgwu@live.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "component",
    "slots",
    "composition"
  ],
  "source": "./src/*.tsx",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "exports": {
    ".": {
      "import": "./dist/index.modern.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./static": {
      "import": "./dist/static.modern.js",
      "require": "./dist/static.js",
      "types": "./dist/static.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:ci": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "build": "microbundle build --jsx React.createElement  --jsxFragment React.Fragment",
    "watch": "microbundle watch --jsx React.createElement  --jsxFragment React.Fragment",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "prettier": "prettier --write '**/src/**/*.{ts,tsx}'"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/react": "^18.0.10",
    "@types/react-test-renderer": "^18.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "microbundle": "^0.15.0",
    "react": "^18.1.0",
    "react-test-renderer": "^18.1.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17 || ^18"
  },
  "browserslist": [
    "Chrome > 61",
    "Edge > 16",
    "Firefox > 60",
    "Safari > 10.1"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
